@page "/"
@layout EmptyLayout
@rendermode InteractiveServer
@using StoreManagementBlazorApp.Services
@using StoreManagementBlazorApp.Entities
@inject ApiService Api
@inject NavigationManager Nav

<div class="d-flex justify-content-center align-items-center min-vh-100 bg-light p-3">
    <div class="card shadow-sm" style="width: 100%; max-width: 420px;">
        <div class="card-body text-center">

            <div class="mb-4">
                <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center mx-auto"
                     style="width: 70px; height: 70px;">
                    <i class="bi bi-shop h1"></i>
                </div>
            </div>

            <h3 class="fw-bold">Welcome to Store</h3>
            <p class="text-muted">Login or register to continue</p>

            <!-- Tabs -->
            <ul class="nav nav-tabs mt-4" id="authTabs" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link active" type="button" @onclick="() => showLogin = true">Login</button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" type="button" @onclick="() => showLogin = false">Register</button>
                </li>
            </ul>

            <div class="mt-3">
                @if (showLogin)
                {
                    <!-- LOGIN FORM -->
                    @if (!string.IsNullOrEmpty(error))
                    {
                        <div class="alert alert-danger py-2">@error</div>
                    }

                    <div class="text-start mt-2">
                        <label class="form-label">Username</label>
                        <input class="form-control" @bind="username" placeholder="Username" />
                    </div>

                    <div class="text-start mt-2">
                        <label class="form-label">Password</label>
                        <input class="form-control" type="password" @bind="password" placeholder="Password" />
                    </div>

                    <button class="btn btn-primary w-100 mt-3" @onclick="HandleLogin">Login</button>

                }
                else
                {
                    <!-- REGISTER FORM -->
                    <div class="text-start mt-2">
                        <label class="form-label">Full Name</label>
                        <input class="form-control" @bind="regFullName" placeholder="Full Name" />
                    </div>
                    <div class="text-start mt-2">
                        <label class="form-label">Username</label>
                        <input class="form-control" @bind="regUsername" placeholder="Username" />
                    </div>
                    <div class="text-start mt-2">
                        <label class="form-label">Password</label>
                        <input class="form-control" type="password" @bind="regPassword" placeholder="Password" />
                    </div>
                    <div class="text-start mt-2">
                        <label class="form-label">Confirm Password</label>
                        <input class="form-control" type="password" @bind="regConfirmPassword" placeholder="Confirm Password" />
                    </div>

                    <button class="btn btn-success w-100 mt-3" @onclick="HandleRegister">Register</button>

                    @if (!string.IsNullOrEmpty(regError))
                    {
                        <div class="alert alert-danger py-2 mt-2">@regError</div>
                    }
                }
            </div>
        </div>
    </div>
</div>

@code {
    // --- login state ---
    string username = "";
    string password = "";
    string error = "";
    string lastUsername = "";
    string lastPassword = "";

    // --- register state ---
    string regFullName = "";
    string regUsername = "";
    string regPassword = "";
    string regConfirmPassword = "";
    string regError = "";

    bool showLogin = true;

    List<UserDto>? users;

    protected override async Task OnInitializedAsync()
    {
        await LoadUsers();
    }

    private async Task HandleLogin()
    {
        error = "";
        lastUsername = username;
        lastPassword = password;

        try
        {
            var user = await Api.LoginAsync(username, password);
            if (user == null)
            {
                error = "Sai tài khoản hoặc mật khẩu";
                return;
            }

            Console.WriteLine($"Login success: {user.Full_Name} ({user.Username})");
            Nav.NavigateTo("/index", true);
        }
        catch (Exception ex)
        {
            error = $"Login error: {ex.Message}";
        }
    }

    private async Task HandleRegister()
    {
        regError = "";

        if (string.IsNullOrWhiteSpace(regUsername) || string.IsNullOrWhiteSpace(regPassword) || string.IsNullOrWhiteSpace(regFullName))
        {
            regError = "Vui lòng nhập đủ thông tin.";
            return;
        }

        if (regPassword != regConfirmPassword)
        {
            regError = "Mật khẩu xác nhận không trùng khớp.";
            return;
        }

        try
        {
            bool success = await Api.RegisterAsync(regFullName, regUsername, regPassword);

            if (!success)
            {
                regError = "Đăng ký thất bại (có thể username đã tồn tại)";
                return;
            }

            Console.WriteLine($"Registered: {regFullName} / {regUsername}");
            regError = "Đăng ký thành công!";
            showLogin = true; // quay về login
        }
        catch (HttpRequestException httpEx)
        {
            regError = "Lỗi kết nối API";
            Console.WriteLine($"HttpRequestException: {httpEx.Message}");
        }
        catch (Exception ex)
        {
            regError = $"Lỗi không xác định: {ex.Message}";
            Console.WriteLine(ex.Message);
        }
    }


    private async Task LoadUsers()
    {
        try
        {
            users = await Api.GetUsersAsync();
            Console.WriteLine($"Loaded {users.Count} users");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading users: {ex.Message}");
            users = new List<UserDto>();
        }
    }
}
